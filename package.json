{
  "name": "ccpdfviewer",
  "version": "0.1.0",
  "description": "PDF viewer desktop app with Claude AI chat",
  "main": "out/main/index.js",
  "author": "nogu66",
  "license": "MIT",
  "homepage": "https://github.com/nogu66/cc-pdf-viewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/nogu66/cc-pdf-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/nogu66/cc-pdf-viewer/issues"
  },
  "keywords": [
    "pdf",
    "claude",
    "ai",
    "electron",
    "rag",
    "desktop"
  ],
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "electron-store": "^8.1.0",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.9.155",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.0.0",
    "@types/pdf-parse": "^1.1.4",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^2.3.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.ccpdfviewer",
    "productName": "CC PDF Viewer",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "icon": "resources/icon",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
